    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "8.11"
  },
  "dependencies": {
    "ajv": "^6.4.0",
    "cwebp": "^2.0.2",
    "del": "^3.0.0",
